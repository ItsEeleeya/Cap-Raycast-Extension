{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cap-recorder",
  "title": "Cap Recorder",
  "description": "Raycast shortcuts for Cap Recorder",
  "icon": "cap-icon.png",
  "author": "ItsEeleeya",
  "keywords": [
    "Cap",
    "Screen Sharing",
    "Screen Recording"
  ],
  "categories": [
    "Applications",
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start-recording",
      "title": "Start Recording",
      "description": "Choose the Camera and Microphone to start a Cap recording with.",
      "mode": "view"
    },
    {
      "name": "stop-recording",
      "title": "Stop Recording",
      "description": "Stop the running Cap recording.",
      "mode": "no-view"
    },
    {
      "name": "open-dashboard",
      "title": "Open Dashboard",
      "description": "Open your Cap account's dashboard.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.78.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
